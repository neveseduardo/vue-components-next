{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"declarationMap": false,
		"skipLibCheck": true
	},
	"include": [
		"src/components/**/*"
	],
	"exclude": [
		"src/**/*.stories.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
